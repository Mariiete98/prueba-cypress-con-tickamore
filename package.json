{
  "name": "prueba-mario-con-tickamore",
  "version": "1.0.0",
  "description": "Pruebas Cypress Mario. Tickamore.",
  "main": "index.js",
  "scripts": {
    "generar-reporte": "npx allure generate allure-results -o allure-report --clean",
    "abrir-reporte": "npx allure open",

    "verReporte": "npm run generar-reporte && npm run abrir-reporte",
    "limpiar-reporte": "npx rimraf ./allure-report && rimraf ./allure-results",

    "ejecutar-pruebas-open": "npx cypress open --browser chrome --env allure=true",
    "ejecutar-pruebas-run": "npx cypress run --browser chrome --headed --env allure=true",
    
    "test1": "npm run limpiar-reporte && npm run ejecutar-pruebas-open",
    "test2": "npm run limpiar-reporte && npm run ejecutar-pruebas-run",

    "testAzure": "npm run limpiar-reporte && npx cypress run --env allure=true",
    "reporteAzure": "npx allure generate allure-results -o allure-report --clean"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mariiete98/prueba-cypress-con-tickamore.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Mariiete98/prueba-cypress-con-tickamore/issues"
  },
  "homepage": "https://github.com/Mariiete98/prueba-cypress-con-tickamore#readme",
  "dependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.36.0",
    "cypress": "^15.10.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.2"
  }
}
